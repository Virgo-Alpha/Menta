<div class="dashboard">
    <div class="chart">
        <canvas id="attendancePieChart"></canvas>
    </div>
    <div class="chart">
        <canvas id="enrollmentScatterPlot"></canvas>
    </div>
    <div class="chart">
        <canvas id="admissionLineChart"></canvas>
    </div>
    <div class="chart">
        <canvas id="attendanceDoughnutChart"></canvas>
    </div>
    <div class="chart">
        <canvas id="studentRadarChart"></canvas>
    </div>
    <div class="chart">
        <canvas id="studentBarChart"></canvas>
        </div>
</div>

<style>
    .dashboard {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(400px, 1fr));
        grid-gap: 20px;
        background-color: #333;
        padding: 20px;
    }

    .chart {
        background-color: #444;
        border-radius: 5px;
        padding: 20px;
    }
</style>

<script>
// Import the generated chart objects
        const pieChart = {
            type: 'pie',
            data: {
                labels: ['Attended', 'Missed'],
                datasets: [{
                    data: [75, 25], // Example data: 75% attended, 25% missed
                    backgroundColor: [
                        'rgba(54, 162, 235, 0.7)', // Blue for attended
                        'rgba(255, 99, 132, 0.7)' // Red for missed
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                // Add options for the pie chart (title, legend, etc.)
                responsive: true,
                maintainAspectRatio: false,
            }
        };

        const scatterPlot = {
            type: 'scatter',
            data: {
                datasets: [{
                    label: 'Enrollment',
                    data: [
                        { x: 1, y: 50 },
                        { x: 2, y: 70 },
                        { x: 3, y: 90 },
                        // More data points
                    ],responsive: true,
    maintainAspectRatio: false,
                    backgroundColor: 'rgba(255, 206, 86, 0.5)' // Yellowish
                }]
            },
            options: {
                // Add options for the scatter plot (title, axis labels, etc.)
                responsive: true,
                maintainAspectRatio: false,
            }
        };

        const lineChart = {
            type: 'line',
            data: {
                labels: ['January', 'February', 'March', 'April', 'May', 'June'],
                datasets: [{
                    label: 'Admitted',
                    data: [30, 45, 60, 75, 80, 90], // Example data for admissions
                    borderColor: 'rgba(75, 192, 192, 1)',
                    borderWidth: 1,
                    fill: false
                },
                {
                    label: 'Hired',
                    data: [10, 20, 35, 45, 50, 60], // Example data for hires
                    borderColor: 'rgba(255, 99, 132, 1)',
                    borderWidth: 1,
                    fill: false
                }]
            },
            options: {
                // Add options for the line chart (title, axis labels, etc.)
                responsive: true,
                maintainAspectRatio: false,
            }
        };

    // Sample data
    const doughnutChartData = [60, 40];
    const radarChartData = {
        labels: ['35+', '30 - 35', '25 - 30', '20 - 24', '18 - 20', '<18'],
        datasets: [{
            label: 'Student Age groups',
            data: [70, 80, 65, 75, 90, 85],
            backgroundColor: 'rgba(255, 159, 64, 0.5)',
            borderColor: 'rgba(255, 159, 64, 1)',
            borderWidth: 1
        }]
    };

    const doughnutChart = {
        type: 'doughnut',
        data: {
            labels: ['Active', 'Inactive'],
            datasets: [{
                data: doughnutChartData,
                backgroundColor: [
                    'rgba(54, 162, 235, 0.7)', // Blue for attended
                    'rgba(255, 99, 132, 0.7)' // Red for missed
                ],
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
        }
    };

    const radarChart = {
        type: 'radar',
        data: radarChartData,
        options: {
            responsive: true,
            maintainAspectRatio: false,
            scale: {
                ticks: {
                    beginAtZero: true,
                    min: 0,
                    max: 100
                }
            }
        }
    };

    const barchart = {
        type: 'bar',
        data: {
            labels: ['2018', '2019', '2020', '2021', '2022', '2023'],
            datasets: [{
                label: 'Enrolled mentees by year',
                data: [70, 80, 65, 75, 90, 85],
                backgroundColor: 'rgba(255, 159, 64, 0.5)',
                borderColor: 'rgba(255, 159, 64, 1)',
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            scale: {
                ticks: {
                    beginAtZero: true,
                    min: 0,
                    max: 100
                }
            }
        }
    };

    // Render the charts
    new Chart(document.getElementById('attendancePieChart'), pieChart);
    new Chart(document.getElementById('enrollmentScatterPlot'), scatterPlot);
    new Chart(document.getElementById('admissionLineChart'), lineChart);
    new Chart(document.getElementById('attendanceDoughnutChart'), doughnutChart);
    new Chart(document.getElementById('studentRadarChart'), radarChart);
    new Chart(document.getElementById('studentBarChart'), barchart);
</script>
