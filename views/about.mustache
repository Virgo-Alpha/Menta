<body>
    <!-- Header -->
    <header class="bg-purple py-2 fixed-top">
    <div class="container-fluid d-flex justify-content-between align-items-center">
        <span class="logo-text text-black font-weight-bold">Menta</span>

        <ul>
            <li><a href="#About" class="btn btn-primary mx-1">About Us</a></li>
            <li><a href="#ContactUs" class="btn btn-primary mx-1">Contact Us</a></li>
            <li><a href="/login" class="btn btn-main btn-primary mx-1">Log In</a></li>
            <li class="btn btn-main btn-primary mx-1"><a href="/register">Join Us</a></li>
        </ul>
    </div>
</header>


    <!-- Picture of students -->
    <img src="images/us.jpeg" class="img-fluid mentees" alt="Mentees having fun">

    <!-- Introduction Text -->
    <section class="bg-secondary text-black py-5" id="About">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8 text-center" id="AboutUs">
                    <h2 class="font-weight-bold">Introducing Menta</h2>
                    <br>
                    <p>We are a group of Students looking for mentorship in terms of Professional Development, entrepreneurship and applying to Post-Grad programs.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Founders and Patron -->
    <section class="bg-white py-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-4 text-center mb-4">
                    <img src="images/founder.jpeg" class="founder" alt="Founder Picture">
                    <h4 class="mt-3 mb-1">Benson Mugure</h4>
                    <p>Founder</p>
                </div>
                <div class="col-md-4 text-center mb-4">
                    <img src="images/patron.jpeg" class="founder" alt="Patron Picture">
                    <h4 class="mt-3 mb-1">Strive Masiyiwa</h4>
                    <p>Patron</p>
                </div>
            </div>
        </div>
    </section>

    <section id="ContactUs">
            <h3>Contact Us</h3>
                <form action="https://formsubmit.co/b.mugure@alustudent.com" method="POST">
                    <label for="fname" id="fname-label">First Name:</label>
                    <input type="text" id="fname" name="fname" placeholder="First name" required>

                    <label for="lname" id="lname-label">Last Name:</label>
                    <input type="text" id="lname" name="lname" placeholder="Last name" required> <br><br>

                    <!---Email input-->
                    <label for="email" id="email-label">Email Address:</label>
                    <input type="email" id="email" name="email" placeholder="Enter your email address" required><br>

                    <p>Please type your message below:</p>
                    <textarea class="form-control" name="message" rows="10"></textarea>
                    <br><br>

                    <!---Submit button-->
                    <input id="submit" type="submit" value="Submit">
                </form>
        </section>

    <!-- Footer -->
    <footer class="bg-black text-white py-4 text-center">

        <div class="flex-parent">
        <!---Newsletter subscription (Hyper benchmark)-->
        <div id="footer1">
            <ul>
                <li><a href="signup.html">Join Us</a></li>
                <li><a href="login.html">Log In</a></li>
                <li><a href="#About">About Us</a></li>
                <li><a href="#ContactUs">Contact Us</a></li>
                <li class="btn btn-default btn-primary"><a href="#">Join Us</a></li>
            </ul>
